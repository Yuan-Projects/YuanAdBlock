{
  "manifest_version": 5,
  "name": "Yuan AdBlock",
  "description": "Block annoying ADs for you.",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*"
  ],
  
  "icons": {
    "128": "icon128.png"
  },
  
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://mail.163.com/*"],
      "css": ["mail.163.com.css"],
      "all_frames": true
    },
    {
      "matches": ["http://www.iciba.com/*"],
      "css": ["iciba.com.css"],
      "all_frames": true
    },
    {
      "matches": ["http://tv.sohu.com/*"],
      "css": ["tv.sohu.com.css"],
      "all_frames": true
    },
    {
      "matches": ["https://blu180.mail.live.com/*"],
      "css": ["mail.live.com.css"],
      "all_frames": true
    },
    {
      "matches": ["http://caniuse.com/*"],
      "css": ["caniuse.com.css"],
      "all_frames": true
    },
    {
      "matches": ["http://user.qzone.qq.com/*"],
      "css": ["user.qzone.qq.com.css"],
      "all_frames": true
    },
    {
      "matches": ["http://*.blog.163.com/*"],
      "css": ["blog.163.com.css"],
      "all_frames": true
    },
    {
      "matches": ["http://zhibo8.cc/*"],
      "css": ["zhibo8.cc.css"],
      "all_frames": true
    }
  ]
}
