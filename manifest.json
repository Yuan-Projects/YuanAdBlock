{
  "manifest_version": 4,
  "name": "Yuan AdBlock",
  "description": "Block annoying ADs for you.",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["jquery-1.9.1.min.js", "block.js"]
    },
    {
        "matches": ["http://*.e-club.cn/*"],
        "js": ["jquery-1.9.1.min.js", "activepower.net.js"]
    },
    {
      "matches": ["http://*.iciba.com/*"],
      "css": ["iciba.com.css"]
    }
  ]
}
